{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
      <h2>Novo Cliente:</h2>
      <form class="form-horizontal" method="post" action="/cliente/salvar">
        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Nome:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="nome" placeholder="Nome Completo" name="nome" required>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="pwd">E-mail:</label>
          <div class="col-sm-10">          
            <input type="email" class="form-control" id="email" placeholder="exemplo@email.com" name="email" required>
          </div>
        </div>
        <div class="form-group">        
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
          </div>
        </div>
      </form>
    </div>

{% endblock %}